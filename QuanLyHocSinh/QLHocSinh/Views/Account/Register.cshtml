@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="../assets/images/favicon.png">
    <title>Đăng ký tài khoản</title>
    <!-- Bootstrap Core CSS -->
    <link href="../assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="../assets/css/style.css" rel="stylesheet">
    <!-- You can change the theme colors from here -->
    <link href="../assets/css/colors/green.css" id="theme" rel="stylesheet">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <style>
        .login-register {
            padding: 3% 0 !important;
        }
        .form-group {
            margin-bottom: 10px !important;
        }
    </style>
</head>
<body>
    <!-- ============================================================== -->
    <!-- Preloader - style you can find in spinners.css -->
    <!-- ============================================================== -->
    <div class="preloader">
        <svg class="circular" viewBox="25 25 50 50">
            <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
        </svg>
    </div>
    <!-- ============================================================== -->
    <!-- Main wrapper - style you can find in pages.scss -->
    <!-- ============================================================== -->
    <section id="wrapper">
        <div class="login-register" style="background-image:url(../assets/images/background/login-register.jpg);">
            <div class="login-box card">
                <div class="card-block">
                    <form class="form-horizontal form-material" id="registerform" action="" method="post">
                        <h3 class="box-title m-b-20">Đăng ký tài khoản</h3>
                        <div class="form-group" id="fmfname">
                            <div class="col-xs-12">
                                <input class="form-control" id="fname" name="fname" type="text" placeholder="Họ tên">
                                <small id="spfname" class="form-control-feedback">Họ tên không hợp lệ </small>
                            </div>
                        </div>
                        <div class="form-group" id="fmfusername">
                            <div class="col-xs-12">
                                <input class="form-control" id="fusername" name="fusername" type="text"  placeholder="Tên đăng nhập">
                                <small id="spfusername" class="form-control-feedback">Tên đăng nhập không hợp lệ </small>
                            </div>
                        </div>
                        <div class="form-group " id="fmfpassword">
                            <div class="col-xs-12">
                                <input class="form-control" id="fpassword" name="fpassword" type="password" placeholder="Mật khẩu">
                                <small id="spfpassword" class="form-control-feedback">Mật khẩu không hợp lệ</small>
                            </div>
                        </div>
                        <div class="form-group" id="fmfcpassword">
                            <div class="col-xs-12">
                                <input class="form-control" id="fcpassword" name="fcpassword" type="password" placeholder="Nhập lại mật khẩu">
                                <small id="spfcpassword" class="form-control-feedback">Mật khẩu nhập lại chưa đúng</small>
                            </div>
                        </div>
                        <div class="form-group " id="fmfemail">
                            <div class="col-xs-12">
                                <input class="form-control" id="femail" name="femail" type="text" placeholder="Email">
                                <small id="spfemail" class="form-control-feedback">Email không hợp lệ </small>
                            </div>
                        </div>
                        @*<div class="form-group">
                            <div class="col-md-12">
                                <div class="checkbox checkbox-success p-t-0 p-l-10">
                                    <input id="checkbox-signup" type="checkbox">
                                    <label for="checkbox-signup"> Đồng ý với  <a href="#">Điều khoản</a></label>
                                </div>
                            </div>
                        </div>*@
                        @if (@ViewBag.Register == 2)
                        {
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <div class="alert alert-warning alert-rounded">
                                        @ViewBag.Message
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">&times;</span> </button>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (@ViewBag.Register == 3)
                        {
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <div class="alert alert-success alert-rounded">
                                        @ViewBag.Message
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">&times;</span> </button>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="form-group text-center m-t-20">
                            <div class="col-xs-12">
                                <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Đăng ký</button>
                            </div>
                        </div>
                        <div class="form-group m-b-0">
                            <div class="col-sm-12 text-center">
                                <p>Bạn đã có tài khoản? <a href="@Url.Action("Login","Account")" class="text-info m-l-5"><b>Đăng nhập</b></a></p>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>

    </section>
    <!-- ============================================================== -->
    <!-- End Wrapper -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- All Jquery -->
    <!-- ============================================================== -->
    <script src="../assets/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="../assets/plugins/bootstrap/js/tether.min.js"></script>
    <script src="../assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <!-- slimscrollbar scrollbar JavaScript -->
    <script src="../assets/js/jquery.slimscroll.js"></script>
    <!--Wave Effects -->
    <script src="../assets/js/waves.js"></script>
    <!--Menu sidebar -->
    <script src="../assets/js/sidebarmenu.js"></script>
    <!--stickey kit -->
    <script src="../assets/plugins/sticky-kit-master/dist/sticky-kit.min.js"></script>
    <!--Custom JavaScript -->
    <script src="../assets/js/custom.min.js"></script>
    <!-- ============================================================== -->
    <!-- Style switcher -->
    <!-- ============================================================== -->
    <script src="../assets/plugins/styleswitcher/jQuery.style.switcher.js"></script>
    <script>
        $(document).ready(function () {
            $('#password').change(function () {
                $('#cpassword').val('')
            });

            
        })
        function check(input) {
            if (input.value != document.getElementById('password').value) {
                input.setCustomValidity('Mật khẩu nhập lại chưa giống');
            } else {
                // input is valid -- reset the error message
                input.setCustomValidity('');
            }
        }
    </script>
</body>
</html>
<script src="~/Scripts/Account/Auth.js"></script>