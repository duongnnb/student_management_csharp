
@{
    ViewBag.Title = "Tra cứu học sinh";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Page = "Quản lý lớp học";
}

<style>
    .form-group row {
        padding-top: 10px;
    }
    .badge {
        font-size: 100% !important;
    }
</style>

<div class="row">
    <div class="col-12">
        <div class="card card-outline-primary">
            <div class="card-header">
                <h4 class="m-b-0 text-white">Thông tin</h4>
            </div>
            <div class="card-block">
                <form action="form-layout.html#" class="form-horizontal">
                    <div class="form-body">
                        <hr class="m-t-0 m-b-40">
                        <!--/row-->
                        <div class="row">
                            <div class="col-md-12">
                                <div id="fmblock" class="form-group row">
                                    <label class="control-label text-right col-md-3">Nhập mã/ Họ tên học sinh:</label>
                                    <div class="col-md-4">
                                        <input id="txtIDName" type="text" class="form-control">
                                    </div>
                                    <div class="col-md-3">
                                        <div id="" class="form-group row">
                                            @*<label class="control-label text-right col-md-2">Khóa học</label>*@
                                            <div class="col-md-12">
                                                <select id="Year" data-style="form-control btn-secondary">
                                                    @{
                                                        int strDate = DateTime.Now.Year;
                                                        for (; strDate > 1988; strDate--)
                                                        {
                                                            var tem = strDate - 1;
                                                            <option value="@tem-@strDate">Khóa học @tem - @strDate </option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <button type="button" onclick="ViewDetailStudent()" class="btn btn-primary">
                                            <i class="fa fa-search" aria-hidden="true"></i>Tìm kiếm
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <table id="detailtable" class="table table-striped table-bordered" style="width: 100%">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Mã HS</th>
                                    <th>Họ tên</th>
                                    <th>Lớp</th>
                                    <th>TBHK1</th>
                                    <th>TBHK2</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/Classes/Search.js"></script>

<script>
    $(document).ready(function () {

    })
   
</script>
