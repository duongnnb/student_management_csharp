@{
    ViewBag.Title = "Danh sách lớp học";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Page = "Danh sách lớp học";
}

<style>
    body {
        font-family: Arial, Helvetica, sans-serif !important;
    }
</style>

<div class="row">
    <button class="btn pull-left hidden-sm-down btn-success" data-toggle="modal" data-target="#ModelAddClass" style="margin-left: 15px;">
        <i class="fa fa-plus"></i> Thêm lớp
    </button>

</div>

<div class="row" style="margin-top:12px">
    <div class="col-12">
        <div class="card card-outline-primary">
            <div class="card-header">
                <h4 class="m-b-0 text-white">Danh sách lớp học</h4>
            </div>
            <div class="card-block">
                <form action="form-layout.html#" class="form-horizontal">
                    <div class="form-body">
                        <table id="listclass" class="table table-striped table-bordered" style="width: 100%">
                            <thead>
                                <tr>
                                    <th>Mã lớp</th>
                                    <th>Tên lớp</th>
                                    <th>Khối</th>
                                    <th>Sĩ số</th>
                                    <th>Sĩ số tối đa</th>
                                    <th>Cập nhật/Hủy</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="col-md-12">
    <div class="card">
        <div class="card-block">

            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel1">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title" id="exampleModalLabel1">Cập nhật thông tin lớp học</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        </div>
                        <div class="modal-body">
                            <form>

                                <div class="col-md-12">
                                    <div class="form-group row">
                                        <label class="control-label text-right  col-md-4">Mã Lớp</label>
                                        <div class="col-md-8">
                                            <input id="classid" type="text" class="form-control" disabled>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="form-group row">
                                        <label class="control-label text-right  col-md-4">Tên lớp</label>
                                        <div class="col-md-8">
                                            <input id="classname" type="text" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group row">
                                        <label class="control-label text-right  col-md-4">Sĩ số tối đa</label>
                                        <div class="col-md-8">
                                            <input id="maxtotal" type="text" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                            <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="updateclass()"><i class="fa fa-edit" style="font-size:16px"></i>Lưu</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.modal -->

            <div class="modal fade" id="ModelAddClass" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel1">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title" id="exampleModalLabel1">Thêm lớp học</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        </div>
                        <div class="modal-body">
                            <form>

                                <div class="col-md-12">
                                    <div class="form-group row">
                                        <label class="control-label text-right  col-md-3">Tên Lớp</label>
                                        <div class="col-md-9">
                                            <input id="classnameadd" type="text" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group row">
                                        <label class="control-label text-right  col-md-3">Khối</label>
                                        <div class="col-md-9">
                                           <select id="blockadd"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group row">
                                        <label class="control-label text-right  col-md-3">Sĩ số tối đa</label>
                                        <div class="col-md-9">
                                            <input id="maxtotaladd" type="text" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                            <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="addclass()"><i class="fa fa-edit" style="font-size:16px"></i>Thêm</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Classes/List.js"></script>
