
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Báo cáo theo lớp</h2>


<div class="row">
    <div class="col-12">
        <div class="card card-outline-info">
            <div class="card-header">
                <h4 class="m-b-0 text-white">Thông tin lớp học</h4>
            </div>
            <div class="card-block">
                <form action="form-layout.html#" class="form-horizontal">
                    <div class="form-body">
                        <hr class="m-t-0 m-b-40">
                        <!--/row-->
                        <div class="row">
                            <div class="col-md-3">
                                <div id="fmblock" class="form-group row">
                                    <label class="control-label text-right col-md-3">Khối</label>
                                    <div class="col-md-9">
                                        <select id="block" data-style="form-control btn-secondary"></select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div id="fmgrade" class="form-group row">
                                    <label class="control-label text-right col-md-3">Lớp</label>
                                    <div class="col-md-9">
                                        <select id="grade" data-style="form-control btn-secondary"></select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div id="fmgrade" class="form-group row">
                                    <div class="col-md-9">
                                        <button type="button" onclick="ViewStudentAVG()" class="btn btn-success">Xem điểm TB</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <table id="rp1table" class="table table-striped table-bordered" style="width: 100%">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Mã học sinh</th>
                                    <th>Họ tên</th>
                                    <th>TBHK1</th>
                                    <th>TBHK2</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/Report/Report.js"></script>